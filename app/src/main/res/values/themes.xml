<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BloodDonation" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:navigationBarColor">@color/grey</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BloodDonation" parent="Base.Theme.BloodDonation" />

    <style name="page8.Blood_Donation" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textColorHint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="startIconTint">@color/black</item>
        <item name="trackTint">@color/black</item>
        <item name="thumbTint">@color/black</item>
        <item name="placeholderTextColor">@color/grey</item>
        <item name="boxBackgroundColor">@color/grey_cancel</item>
    </style>

    <style name="bg" parent="page8.Blood_Donation">
        <item name="tint">@color/black</item>
    </style>

    <style name="button_attr" parent="page8.Blood_Donation">
        <item name="android:background">@drawable/scroll</item>
        <item name="android:backgroundTint">@color/white_bg</item>
    </style>

    <style name="radio_attr" parent="page8.Blood_Donation">
        <item name="buttonTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bg1" parent="page8.Blood_Donation">
        <item name="android:background">@color/white_bg</item>
    </style>
    <style name="page71.Blood_Donation" parent="Theme.MaterialComponents.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOutline">@color/box_col</item>
    </style>
    <style name="MyTextInputLayout_FloatingLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!-- Set the color of the floating label text -->
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
</resources>